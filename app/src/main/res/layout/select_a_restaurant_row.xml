<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">



            <RelativeLayout
                android:id="@+id/select_a_restaurant_name_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="60dp"
                    android:id="@+id/explore_restaurant_image_layout"
                    android:layout_height="60dp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="6dp"
                    android:padding="1dp">

                    <ImageView
                        android:id="@+id/select_a_restaurant_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sample_image"/>

                </android.support.v7.widget.CardView>



                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/explore_restaurant_image_layout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/select_a_restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liali Cafe"
                        android:textColor="@color/black_1"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/select_a_restaurant_address"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black_2"
                        android:text="Fortress Square, Lahore Cantt"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>