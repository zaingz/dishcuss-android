<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/offers_parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#e6e5e5">


    <FrameLayout
        android:layout_width="160dp"
        android:alpha="0.6"
        android:layout_height="140dp">

    <ImageView
        android:id="@+id/offers_photo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/intro_bg"
        android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/offer_price"
            android:layout_gravity="center"
            android:textColor="@color/tw__composer_white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="PKR 500"/>

        <TextView
            android:id="@+id/offer_restaurant_name"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColor="@color/tw__composer_white"
            android:layout_width="75dp"
            android:layout_height="15dp"
            android:textSize="12dp"
            android:text="Restaurant Name"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Scan QR Code"/>

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_qr_code"
            />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>