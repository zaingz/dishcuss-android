<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chat_user_profile_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_desi_pundit_selection"
            app:civ_border_width="1dp"
            app:civ_border_color="#c1c0c0"/>

    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_bubble_gray">



        <TextView
            android:layout_gravity="left|center"
            android:id="@+id/chat_message"
            android:layout_width="0dp"
            android:layout_weight="80"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textIsSelectable="true"
            android:textColor="@color/black_2"
            android:text="this is me test layout image bubble"
            android:textSize="10dp" />

        <TextView
            android:layout_gravity="right|center"
            android:id="@+id/timestamp"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:textColor="@color/black_2"
            android:text="7:45 PM"
            android:textSize="10dp" />
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>