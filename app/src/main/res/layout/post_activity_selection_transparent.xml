<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0000000"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/write_review_layout"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_border">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_write_review"/>


            <View
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="Write a review"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/upload_photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/layout_border">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_camera"/>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:text="Upload Photo "/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/check_in_layout"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/layout_border">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/location_marker"/>

            <View
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:text="Check In          "/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/post_cross_button"
            android:layout_width="80dp"
            android:layout_gravity="bottom"
            android:layout_height="80dp"
            android:src="@drawable/icon_cross"/>
    </LinearLayout>

</LinearLayout>