<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/toolbar_bg">

        <LinearLayout
            android:layout_margin="7dp"
            android:background="@drawable/layout_search_bar_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <AutoCompleteTextView

                android:hint="Restaurant Name"
                android:id="@+id/search_bar_edit_text"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_search_orange"
                android:inputType="text"/>

        </LinearLayout>

        </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/recent_search_card_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <LinearLayout
        android:id="@+id/search_recent_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="3dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Search"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/recent_search_result_1"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/recent_search_image_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fdfdfd"/>

                <TextView
                    android:id="@+id/recent_search_user_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sikander Ali"
                    android:textColor="@color/black_3"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/recent_search_info_1"
                    android:layout_width="wrap_content"
                    android:text="Big Foodie"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/recent_search_result_2"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/recent_search_image_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fdfdfd"/>

                <TextView
                    android:id="@+id/recent_search_user_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sikander Ali"
                    android:textColor="@color/black_3"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/recent_search_info_2"
                    android:layout_width="wrap_content"
                    android:text="Big Foodie"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/recent_search_result_3"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/recent_search_image_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fdfdfd"/>

                <TextView
                    android:id="@+id/recent_search_user_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sikander Ali"
                    android:textColor="@color/black_3"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/recent_search_info_3"
                    android:layout_width="wrap_content"
                    android:text="Big Foodie"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/recent_search_result_4"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/recent_search_image_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sample_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fdfdfd"/>

                <TextView
                    android:id="@+id/recent_search_user_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sikander Ali"
                    android:textColor="@color/black_3"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/recent_search_info_4"
                    android:layout_width="wrap_content"
                    android:text="Big Foodie"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/nearby_search_card_view_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/search_nearby_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="3dp">

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby"
            android:textSize="18dp"
            android:textStyle="bold" />
        <ProgressBar
            android:id="@+id/search_nearby_progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_nearby_recycler_view"
            android:layout_marginTop="0dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/current_search_results_parent_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/current_search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/Search_Results_for"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Results for "
                android:textSize="18dp"
                android:textStyle="bold" />
            <ProgressBar
                android:id="@+id/native_progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/current_search_user_recycler_view"
                android:layout_marginTop="0dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/current_search_restaurant_recycler_view"
                android:layout_marginTop="0dp"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>