<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_pager_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sample_image">


    <LinearLayout
        android:id="@+id/featured_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/feature_button_corner"
            android:text="FEATURED"
            android:textColor="#fff"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="right|bottom">

    <TextView
        android:id="@+id/view_page_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Liali Cafe"/>


    <TextView
        android:id="@+id/view_page_restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:text="Fortress square, Lahore cantt"/>


    <TextView
        android:id="@+id/view_page_restaurant_trending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:text="Trending this week"/>
    </LinearLayout>
</LinearLayout>