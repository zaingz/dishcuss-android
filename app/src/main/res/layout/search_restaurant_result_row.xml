<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <RelativeLayout
                android:id="@+id/search_bar_restaurant_name_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/search_bar_restaurant_profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sample_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fdfdfd"/>


                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/search_bar_restaurant_profile_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/search_bar_restaurant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liali Cafe"
                        android:textColor="@color/colorAccent1"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black_2"
                        android:text="Restaurant"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/search_bar_restaurant_address"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black_2"
                        android:text="Fortress Square, Lahore Cantt"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <Button
                    android:id="@+id/search_bar_restaurant_rating"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text="4.5"
                    android:textColor="#fff"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/feature_button_corner"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>